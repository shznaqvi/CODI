<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context="edu.aku.hassannaqvi.codi.activities.AnthropometryActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="16dp"
            android:background="@color/colorPrimary" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/pink_100"
            android:gravity="center"
            android:text="@string/anthroHeading"
            android:textColor="@color/colorPrimary"
            android:textSize="27sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorPrimary" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/an01" />

        <EditText
            android:id="@+id/an01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/measure1"
            android:inputType="numberDecimal"
            android:maxLength="4" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/an02" />

        <EditText
            android:id="@+id/an02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/measure2"
            android:inputType="numberDecimal"
            android:maxLength="4" />

        <LinearLayout
            android:id="@+id/fldGrpan03"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/an03" />

            <EditText
                android:id="@+id/an03"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/measure3"
                android:inputType="numberDecimal"
                android:maxLength="4" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/an04" />

        <RadioGroup
            android:id="@+id/an04"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/an04a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:text="@string/an04a" />

            <RadioButton
                android:id="@+id/an04b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:text="@string/an04b" />

            <RadioButton
                android:id="@+id/an04c"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:text="@string/an04c" />
        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/an05" />

        <EditText
            android:id="@+id/an05"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/measure1"
            android:inputType="numberDecimal"
            android:maxLength="4" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/an06" />

        <EditText
            android:id="@+id/an06"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/measure2"
            android:inputType="numberDecimal"
            android:maxLength="4" />

        <LinearLayout
            android:id="@+id/fldGrpan07"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/an07" />

            <EditText
                android:id="@+id/an07"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/measure3"
                android:inputType="numberDecimal"
                android:maxLength="4" />

        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/an08" />

        <EditText
            android:id="@+id/an08"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/measure1"
            android:inputType="numberDecimal"
            android:maxLength="5" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/an09" />

        <EditText
            android:id="@+id/an09"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/measure2"
            android:inputType="numberDecimal"
            android:maxLength="5" />

        <LinearLayout
            android:id="@+id/fldGrpan10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/an10" />

            <EditText
                android:id="@+id/an10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/measure3"
                android:inputType="numberDecimal"
                android:maxLength="5" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_End"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/red"
                android:text="@string/end_interview"
                android:textColor="#ff1e1e" />

            <!--'onClick' for btn_End will NOT change and always call 'endInterview'-->

            <Button
                android:id="@+id/btn_Continue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/green"
                android:onClick="startInterview"
                android:text="@string/start_interview"
                android:textColor="#1ed61e" />
            <!--'onClick' for btn_Continue will call next section form e.g.: openSection2-->
        </LinearLayout>


    </LinearLayout>


</ScrollView>
