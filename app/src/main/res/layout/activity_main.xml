<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="72dp"
    tools:context="edu.aku.hassannaqvi.codi.activities.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!-- Login progress -->

        <TextView
            android:id="@+id/lblheader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="16dp"
            android:background="@color/dullWhile"
            android:text="Main Menu"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lblMainMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="16dp"
            android:text="Main Menu"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/recordSummary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@color/black"
            android:padding="20dp"
            android:text="Records Summary"
            android:textColor="@color/green"
            android:textSize="14sp"
            android:typeface="monospace"

            />

        <Button
            android:id="@+id/openForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="16dp"
            android:onClick="openForm"
            android:text="Eligibility Form" />

        <Button
            android:id="@+id/openForm1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="16dp"
            android:onClick="openForm1"
            android:text="Enrollment Form"
            android:visibility="gone" />

        <Button
            android:id="@+id/openV2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="16dp"
            android:onClick="openV2"
            android:text="Second Visit Form"
            android:visibility="visible" />

        <Button
            android:id="@+id/openV3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="16dp"
            android:onClick="openV3"
            android:text="Third Visit Form"
            android:visibility="visible" />

        <Button
            android:id="@+id/openV4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="16dp"
            android:onClick="openV4"
            android:text="Fourth Visit Form"
            android:visibility="visible" />

        <Button
            android:id="@+id/openV5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="16dp"
            android:onClick="openV5"
            android:text="Fifth Visit Form"
            android:visibility="visible" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="CheckCluster"
                android:text="Check Block" />
        </LinearLayout>

        <Button
            android:id="@+id/syncServer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="16dp"
            android:onClick="syncServer"
            android:text="Upload Data" />

        <Button
            android:id="@+id/syncDevice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="16dp"
            android:onClick="syncDevice"
            android:text="Download Data"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/adminsec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <Button
                android:id="@+id/openMissed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="16dp"
                android:onClick="openMissed"
                android:text="Missed Visits" />


            <Button
                android:id="@+id/openMembers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="16dp"
                android:onClick="openMembers"
                android:text="Section Members"
                android:visibility="gone" />

            <Button
                android:id="@+id/openA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="16dp"
                android:onClick="openA"
                android:text="Section A"
                android:visibility="gone" />

            <Button
                android:id="@+id/openB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="16dp"
                android:onClick="openB"
                android:text="Section B"
                android:visibility="gone" />

            <Button
                android:id="@+id/openC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="16dp"
                android:onClick="openC"
                android:text="Section C"
                android:visibility="gone" />

            <Button
                android:id="@+id/openD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="16dp"
                android:onClick="openD"
                android:text="Section D"
                android:visibility="gone" />

            <Button
                android:id="@+id/openE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="16dp"
                android:onClick="openE"
                android:text="Section E"
                android:visibility="gone" />

            <Button
                android:id="@+id/openF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="16dp"
                android:onClick="openF"
                android:text="Section F"
                android:visibility="gone" />

            <Button
                android:id="@+id/openG"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="16dp"
                android:onClick="openG"
                android:text="Section G"
                android:visibility="gone" />

            <Button
                android:id="@+id/openH"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="16dp"
                android:onClick="openH"
                android:text="Section H"
                android:visibility="gone" />

            <Button
                android:id="@+id/openI"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="16dp"
                android:onClick="openI"
                android:text="Section I"
                android:visibility="gone" />

            <Button
                android:id="@+id/openJ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="16dp"
                android:onClick="openJ"
                android:text="Section J"
                android:visibility="gone" />

            <Button
                android:id="@+id/openK"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="16dp"
                android:onClick="openK"
                android:text="Section K"
                android:visibility="gone" />

            <Button
                android:id="@+id/openL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="16dp"
                android:onClick="openL"
                android:text="Section L"
                android:visibility="gone" />

            <Button
                android:id="@+id/openM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="16dp"
                android:onClick="openM"
                android:text="Section M"
                android:visibility="gone" />


            <!--<Button-->
            <!--android:id="@+id/openEnd"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginBottom="8dp"-->
            <!--android:layout_marginTop="16dp"-->
            <!--android:onClick="openEnd"-->
            <!--android:text="Section End" />-->

            <Button
                android:id="@+id/openDB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="16dp"
                android:onClick="openDB"
                android:text="Open Database Manager" />

            <Button
                android:id="@+id/testGPS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="16dp"
                android:onClick="testGPS"
                android:text="Test GPS Coordinates" />
        </LinearLayout>


    </LinearLayout>
</ScrollView>